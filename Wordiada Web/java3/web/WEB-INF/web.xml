<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>gameServlet</servlet-name>
        <servlet-class>gameServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GameUpdater</servlet-name>
        <servlet-class>GameUpdater</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RoomList</servlet-name>
        <servlet-class>RoomsList</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RoomsPage</servlet-name>
        <servlet-class>RoomsPage</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UploadDataPage</servlet-name>
        <servlet-class>UploadDataPage</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>

    <servlet>
        <servlet-name>RoomStatus</servlet-name>
        <servlet-class>RoomStatus</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Logout</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>LoginPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadDataPage</servlet-name>
        <url-pattern>/UploadDataPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gameServlet</servlet-name>
        <url-pattern>/wordiada</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RoomStatus</servlet-name>
        <url-pattern>/roomStatus</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GameUpdater</servlet-name>
        <url-pattern>/gameupdater</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RoomList</servlet-name>
        <url-pattern>/playerAndRoomlist</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RoomsPage</servlet-name>
        <url-pattern>/secondpage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/LoginPage</url-pattern>
    </servlet-mapping>
</web-app>
